{% set assetHash = global.random() %}

<!DOCTYPE html>
<html lang="{{ meta.lang }}"
    domain="{{ meta.domain }}" 
    >
  
  <head>
    <!-- charset/http-equiv/viewport -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- title -->
    <title>
      {% if seo.title %} {{ seo.title }}
      {% elif title %}
      {{ title }} - адвокат Катерина Панчелюга
      {% else %}
      {{ meta.siteName }}
      {% endif %}
    </title>

    <!-- synchronous js / schema  -->
    {% include "schemas/base-schema.njk" %} 
    {% if schema == 'blog' %} 
    <!-- include blogpost schema  -->
    {%- include "schemas/blogpost-schema.njk" %} 
    {% elif schema == 'organization' %} 
    <!-- include organization schema  -->
    {%- include "schemas/organization-schema.njk" %} 
    {% endif %}


    <!-- synchronous css / inline css  -->
    <link rel="stylesheet" href="/assets/css/global.css?{{ assetHash }}" />

    <link rel="preconnect" href="/" crossorigin>

    <!-- preloads -->
    <link
      rel="preload"
      href="/assets/fonts/inter/inter-v12-latin_cyrillic-ext-300.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/assets/fonts/inter/inter-v12-latin_cyrillic-ext-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/assets/fonts/inter/inter-v12-latin_cyrillic-ext-600.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/assets/fonts/forum/forum-v16-latin_cyrillic-ext-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- preloads in page data -->
    {% if preloads %}
    <!-- prettier-ignore -->
    <link rel="preload"
            href="{{ preloads.href }}"
            as="{{ preloads.as }}"
            {% if preloads.type %}type={{ preloads.type }}{% endif %}{% if preloads.imagesrcset %}imagesrcset="{{ preloads.imagesrcset }}" {% endif %}
            {% if preloads.crossorigin %}crossorigin{% endif %} />
    {% endif %}

    <script type="module" src="/assets/scripts/app.js?{{ assetHash }}"></script>

